<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://Goal.editor"
        class="kz.uco.tsadv.web.modules.performance.goal.GoalEdit"
        datasource="goalDs"
        focusComponent="fieldGroup">
    <dsContext>
        <datasource id="goalDs"
                    class="kz.uco.tsadv.modules.performance.model.Goal"
                    view="goal.edit"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="goalDs">
            <column width="250px">
                <field property="goalName"/>
                <field property="library"/>
                <field property="parentGoal"/>
                <field property="startDate"/>
                <field property="endDate"/>
                <field property="successCriteria" rows="4"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
