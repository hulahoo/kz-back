                <column id="email"/>
                <column id="mobilePhone"/>
                <!-- <column id="personGroup" captionProperty="personGroup.personFioWithEmployeeNumber"/>-->
            </columns>
            <rows datasource="userExtsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </groupTable>
    </layout>
