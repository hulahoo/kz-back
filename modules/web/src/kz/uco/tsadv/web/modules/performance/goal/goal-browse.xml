<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://Goal.browser"
        class="kz.uco.tsadv.web.modules.performance.goal.GoalBrowse"
        focusComponent="goalsTable"
        lookupComponent="goalsTable">
    <dsContext>
        <groupDatasource id="goalsDs"
                         class="kz.uco.tsadv.modules.performance.model.Goal"
                         view="goal.browse">
            <query>
                <![CDATA[select e from tsadv$Goal e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="goalsTable"
            spacing="true">
        <filter id="filter"
                applyTo="goalsTable"
                datasource="goalsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="goalsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="goalName"/>
                <column id="successCriteria"/>
                <column id="library.libraryName"/>
                <column id="measureType"/>
                <column id="uom"/>
                <column id="startDate"/>
                <column id="endDate"/>
            </columns>
            <rows datasource="goalsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="goalsTable.create"/>
                <button id="editBtn"
                        action="goalsTable.edit"/>
                <button id="removeBtn"
                        action="goalsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
