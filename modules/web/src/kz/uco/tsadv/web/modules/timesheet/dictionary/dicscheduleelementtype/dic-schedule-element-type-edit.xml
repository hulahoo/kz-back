<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="mainMsg://DicScheduleElementType.editorCaption"
        class="kz.uco.tsadv.web.modules.timesheet.dictionary.dicscheduleelementtype.DicScheduleElementTypeEdit"
        datasource="dicScheduleElementTypeDs"
        focusComponent="fieldGroup">
    <dsContext>
        <datasource id="dicScheduleElementTypeDs"
                    class="kz.uco.tsadv.modules.timesheet.dictionary.DicScheduleElementType"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scroll"
            spacing="true">
        <scrollBox id="scroll"
                   width="100%">
            <fieldGroup id="fieldGroup"
                        datasource="dicScheduleElementTypeDs"
                        width="100%">
                <column width="50%">
                    <field property="langValue1"/>
                    <field property="langValue2"/>
                    <field property="langValue3"/>
                    <field property="langValue4"/>
                    <field property="langValue5"/>
                    <field property="shortName1"/>
                    <field property="shortName2"/>
                    <field property="shortName3"/>
                    <field property="shortName4"/>
                    <field property="shortName5"/>
                    <field property="timeFrom"/>
                    <field property="timeTo"/>
                    <field property="displayOnTimecardEditScreen"/>
                </column>
                <column width="50%">
                    <field property="description1"/>
                    <field property="description2"/>
                    <field property="description3"/>
                    <field property="description4"/>
                    <field property="description5"/>
                    <field property="startDate"/>
                    <field property="endDate"/>
                    <field property="code"/>
                </column>
            </fieldGroup>
        </scrollBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
