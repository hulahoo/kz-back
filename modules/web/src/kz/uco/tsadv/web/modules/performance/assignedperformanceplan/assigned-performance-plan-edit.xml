<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="kz.uco.tsadv.web.modules.performance.assignedperformanceplan.AssignedPerformancePlanEdit"
        datasource="assignedPerformancePlanDs"
        focusComponent="fieldGroup"
        messagesPack="kz.uco.tsadv.web.modules.performance.assignedperformanceplan">
    <dsContext>
        <datasource id="assignedPerformancePlanDs"
                    class="kz.uco.tsadv.modules.performance.model.AssignedPerformancePlan"
                    view="assignedPerformancePlan.browse"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="assignedPerformancePlanDs"
                    width="100%">
            <column width="300px">
                <field captionProperty="performancePlanName"
                       property="performancePlan"/>
                <field captionProperty="person"
                       property="assignedPerson"/>
                <field captionProperty="person"
                       property="assigned_by"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
