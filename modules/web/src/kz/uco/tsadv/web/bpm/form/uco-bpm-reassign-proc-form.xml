<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="kz.uco.tsadv.web.bpm.form.UcoBpmReassignProcForm"
        extends="/com/haulmont/bpm/gui/form/standard/standard-proc-form.xml"
        messagesPack="kz.uco.tsadv.web.bpm.form"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd">
    <dsContext>
        <collectionDatasource id="procActorsDs"
                              class="com.haulmont.bpm.entity.ProcActor"
                              view="procActor-browse">
            <query>
                <![CDATA[select pa from bpm$ProcActor pa where pa.procInstance.id = :custom$procInstance
                order by pa.procRole.order, pa.order]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <label value="msg://user"
               ext:index="4"/>
        <pickerField id="reassignUser"
                     captionProperty="fullName"
                     ext:index="5"
                     metaClass="tsadv$UserExtPersonGroup"
                     required="true"
                     requiredMessage="msg://requiredUser"
                     width="100%"/>
    </layout>
</window>
