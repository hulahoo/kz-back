<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="kz.uco.tsadv.web.bpm.form.UcoBpmProcActorsFrame"
        extends="com/haulmont/bpm/gui/procactor/proc-actors-frame.xml"
        messagesPack="kz.uco.tsadv.web.bpm.form">
    <dsContext>
        <collectionDatasource id="procActorsDs"
                              view="procActor-browseLoc"/>
        <collectionDatasource id="procRolesDs">
            <query>
                <![CDATA[select pr from bpm$ProcRole pr where pr.procDefinition.id = :custom$procDefinition
                order by pr.order]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="usersDs"
                              maxResults="0">
            <query>
                <![CDATA[select user from tsadv$UserExt user]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <table id="procActorsTable">
            <columns>
                <column id="procRole"
                        caption="msg://procRole"
                        captionProperty="procRole.locName"/>
                <column id="user"
                        caption="msg://procUser"
                        required="true"
                        visible="false"/>
                <column id="user2"
                        caption="msg://procUser"
                        generator="generatePicker"/>
            </columns>
        </table>
    </layout>
</window>
