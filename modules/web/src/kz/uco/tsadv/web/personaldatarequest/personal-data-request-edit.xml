<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="kz.uco.tsadv.web.personaldatarequest.PersonalDataRequestEdit"
        datasource="personalDataRequestDs"
        focusComponent="fieldGroup"
        messagesPack="kz.uco.tsadv.web.personaldatarequest">
    <dsContext>
        <datasource id="personalDataRequestDs"
                    class="kz.uco.tsadv.modules.personal.model.PersonalDataRequest"
                    view="personalDataRequest-view">
            <collectionDatasource id="attachmentsDs"
                                  property="attachments"/>
        </datasource>
        <collectionDatasource id="dicMaritalStatusesDs"
                              class="kz.uco.tsadv.modules.personal.dictionary.DicMaritalStatus"
                              view="_local">
            <query>
                <![CDATA[select e from tsadv$DicMaritalStatus e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="AUTO"
                width="600"/>
    <layout spacing="true"
            expand="scrollBox">
        <scrollBox id="scrollBox"
                   spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="personalDataRequestDs">
                <column width="250px">
                    <field editable="false"
                           property="requestNumber"/>
                    <field property="lastName"/>
                    <field property="firstName"/>
                    <field property="middleName"/>
                    <field property="lastNameLatin"/>
                    <field property="firstNameLatin"/>
                    <field property="middleNameLatin"/>
                    <field optionsDatasource="dicMaritalStatusesDs"
                           property="maritalStatus"/>
                    <field property="dateOfBirth"/>
                    <field editable="false"
                           property="status"/>
                </column>
            </fieldGroup>
            <groupBox id="groupBox">
                <table id="attachmentTable"
                       multiselect="true"
                       height="100%"
                       width="100%">
                    <actions>
                        <action id="remove"
                                invoke="removeFile"
                                enable="false"
                                caption="mainMsg://table.btn.remove"/>
                    </actions>
                    <columns>
                        <column id="name" caption="mainMsg://fileName" generator="generatorName"/>
                    </columns>
                    <rows datasource="attachmentsDs"/>
                    <buttonsPanel>
                        <upload id="addFile"/>
                        <button action="attachmentTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="hbox"
              spacing="true">
            <button id="next"
                    caption="msg://next"
                    invoke="nextClick"/>
            <button id="cancel"
                    caption="msg://cancel"
                    invoke="cancelClick"/>
        </hbox>
    </layout>
</window>
