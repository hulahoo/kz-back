                                <column id="addressType"/>
                                <column id="address"/>
                                <column id="postalCode"/>
                                <column id="cityName"/>
                                <column id="startDate"/>
                                <column id="endDate"/>
                            </columns>
                            <rows datasource="addressesDs"/>
                            <buttonsPanel id="addressBtn">
                                <!--<button id="addBtn"
                                        icon="icons/plus-btn.png"
                                        invoke="onAddressCreateBtn"/>
                                <button id="editAddressBtn"
                                        enable="false"
                                        invoke="onAddressEditBtn"
                                        icon="icons/edit.png"/>-->
                            </buttonsPanel>
                        </table>
                    </groupBox>
                </scrollBox>
