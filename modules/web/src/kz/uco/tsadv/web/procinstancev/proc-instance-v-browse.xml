<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="kz.uco.tsadv.web.procinstancev.ProcInstanceVBrowse"
        focusComponent="procInstanceVsTable"
        lookupComponent="procInstanceVsTable"
        messagesPack="kz.uco.tsadv.web.procinstancev">
    <dsContext>
        <groupDatasource id="procInstanceVsDs"
                         class="kz.uco.tsadv.entity.dbview.ProcInstanceV"
                         view="procInstanceV-view">
            <query>
                <![CDATA[select e from tsadv$ProcInstanceV e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="procInstanceVsTable"
            spacing="true">
        <filter id="filter"
                applyTo="procInstanceVsTable"
                datasource="procInstanceVsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="procInstanceVsTable"
                    width="100%">
            <actions>
                <action id="showProcessParticipants"
                        enable="false"
                        caption="msg://process.participants"
                        invoke="showProcessParticipants"/>
            </actions>
            <columns>
                <column id="requestType"/>
                <column id="requestNumber"
                        generator="generateLinkToEntity"/>
                <column id="startDate"/>
                <column id="endDate"/>
                <column id="startedBy"/>
                <column id="active"/>
                <column id="cancelled"/>
            </columns>
            <rows datasource="procInstanceVsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="showProcessParticipantsButton"
                        action="procInstanceVsTable.showProcessParticipants"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
