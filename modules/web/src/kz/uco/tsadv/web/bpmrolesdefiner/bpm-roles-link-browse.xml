<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="kz.uco.tsadv.web.bpmrolesdefiner.BpmRolesLinkBrowse"
        focusComponent="bpmRolesLinksTable"
        lookupComponent="bpmRolesLinksTable"
        messagesPack="kz.uco.tsadv.web.bpmroleslink">
    <dsContext>
        <groupDatasource id="bpmRolesLinksDs"
                         class="kz.uco.tsadv.modules.bpm.BpmRolesLink"
                         view="bpmRolesLink-view">
            <query>
                <![CDATA[select e from tsadv$BpmRolesLink e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="bpmRolesLinksTable"
            spacing="true">
        <filter id="filter"
                applyTo="bpmRolesLinksTable"
                datasource="bpmRolesLinksDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="bpmRolesLinksTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="bpmRole"/>
                <column id="hrRole"/>
            </columns>
            <rows datasource="bpmRolesLinksDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="bpmRolesLinksTable.create"/>
                <button id="editBtn"
                        action="bpmRolesLinksTable.edit"/>
                <button id="removeBtn"
                        action="bpmRolesLinksTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
