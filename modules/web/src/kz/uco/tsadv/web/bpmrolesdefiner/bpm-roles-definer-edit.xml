<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="kz.uco.tsadv.web.bpmrolesdefiner.BpmRolesDefinerEdit"
        datasource="bpmRolesDefinerDs"
        focusComponent="fieldGroup"
        messagesPack="kz.uco.tsadv.web.bpmrolesdefiner">
    <dsContext>
        <datasource id="bpmRolesDefinerDs"
                    class="kz.uco.tsadv.modules.bpm.BpmRolesDefiner"
                    view="bpmRolesDefiner-view">
            <collectionDatasource id="linksDs"
                                  property="links"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="bpmRolesDefinerDs">
            <column width="250px">
                <field property="procModel"/>
            </column>
        </fieldGroup>
        <groupBox id="linksBox"
                  expand="linksTable"
                  caption="msg://kz.uco.tsadv.modules.bpm/BpmRolesDefiner.links">
            <table id="linksTable"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="bpmRole"
                            captionProperty="bpmRole.locName"/>
                    <column id="hrRole"/>
                    <column id="required"/>
                    <column id="findByCounter"/>
                </columns>
                <rows datasource="linksDs"/>
                <buttonsPanel>
                    <button action="linksTable.create"/>
                    <button action="linksTable.edit"/>
                    <button action="linksTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
