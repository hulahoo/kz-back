<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://organizationIncentiveMonthResultEdit.caption"
        focusComponent="form"
        messagesPack="kz.uco.tsadv.web.screens.organizationincentivemonthresult">
    <data>
        <instance id="organizationIncentiveMonthResultDc"
                  class="kz.uco.tsadv.modules.personal.model.OrganizationIncentiveMonthResult"
                  view="organizationIncentiveMonthResult.edit">
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                forceDialog="true"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="organizationIncentiveMonthResultDc">
                <column width="350px">
                    <pickerField id="companyField" property="company">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <dateField id="periodField" property="period"/>
                    <pickerField id="departmentField" property="department">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="indicatorField" property="indicator">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textField id="weightField" property="weight"/>
                    <textField id="planField" property="plan"/>
                    <textField id="factField" property="fact"/>
                    <textField id="premiumPercentField" property="premiumPercent"/>
                    <textField id="totalPremiumPercentField" property="totalPremiumPercent"/>
                    <pickerField id="statusField" property="status">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textField id="commentField" property="comment"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
