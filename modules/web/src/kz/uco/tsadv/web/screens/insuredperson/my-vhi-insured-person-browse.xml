<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://myVhiInsuredPersonBrowse.caption"
        focusComponent="insuredPersonsTable"
        messagesPack="kz.uco.tsadv.web.screens.insuredperson">
    <data readOnly="true">
        <collection id="insuredPersonsDc"
                    class="kz.uco.tsadv.modules.personal.model.InsuredPerson">
            <view extends="_local">
                <property name="statusRequest" view="_minimal"/>
                <property name="insuranceContract" view="_minimal">
                    <property name="startDate"/>
                    <property name="expirationDate"/>
                </property>
            </view>
            <loader id="insuredPersonsDl">
                <query>
                    <![CDATA[select e from tsadv$InsuredPerson e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="insuredPersonsTable"
            spacing="true">
        <filter id="filter"
                applyTo="insuredPersonsTable"
                dataLoader="insuredPersonsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="insuredPersonsTable"
                    width="100%"
                    dataContainer="insuredPersonsDc">
            <actions>
<!--                <action id="create" invoke="eatVHI"/>-->
            </actions>
            <columns>
                <column id="attachDate"/>
                <column id="statusRequest"/>
                <column id="insuranceContract"/>
                <column id="assignDate"/>
                <column id="firstName"/>
                <column id="secondName"/>
                <column id="middleName"/>
                <column id="iin"/>
                <column id="birthdate"/>
                <column id="documentNumber"/>
                <column id="insuranceProgram"/>
                <column id="type"/>
                <column id="amount"/>
                <column id="totalAmount"/>
                <column id="exclusionDate"/>
                <column id="comment"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"  invoke="joinVHI" caption="msg://joinVHI"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
