<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="absencesTable"
        messagesPack="kz.uco.tsadv.web.screens.absence">
    <data readOnly="true">
        <collection id="absencesDc"
                    class="kz.uco.tsadv.modules.personal.model.Absence"
                    view="absence.view">
            <loader id="absencesDl">
                <query>
                    <![CDATA[select e from tsadv$Absence e
                              where e.personGroup.id = :session$userPersonGroupId
                              order by e.dateFrom desc]]>
                </query>
            </loader>
        </collection>
        <collection id="vacationScheduleDc"
                    class="kz.uco.tsadv.entity.VacationSchedule"
                    view="vacation-view">
            <loader id="vacationScheduleDl">
                <query>
                    <![CDATA[select e from tsadv_VacationSchedule e where e.personGroup.id = :session$userPersonGroupId
 order by e.startDate desc]]>
                </query>
            </loader>
        </collection>
        <collection id="vacationScheduleRequestDc"
                    class="kz.uco.tsadv.entity.VacationScheduleRequest"
                    view="vacation-request-view">
            <loader id="vacationScheduleRequestDl">
                <query>
                    <![CDATA[select e from tsadv_VacationScheduleRequest e where e.personGroup.id = :session$userPersonGroupId
 order by e.startDate desc]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tabSheet"
            spacing="true">
        <tabSheet id="tabSheet">
            <tab id="mainTab"
                 caption="msg://myAbsences"
                 margin="true,false,false,false"
                 spacing="true">
                <scrollBox height="100%">
                    <groupBox spacing="true">
                        <filter id="filter"
                                applyTo="absencesTable"
                                dataLoader="absencesDl">
                            <properties include=".*"/>
                        </filter>
                        <table id="absencesTable"
                               width="100%"
                               height="400px"
                               dataContainer="absencesDc">
                            <actions>
                                <action id="excel" type="excel"/>
                                <action id="newLeavingVacationRequest"
                                        invoke="newLeavingVacationRequest"
                                        trackSelection="false"/>
                            </actions>
                            <columns>
                                <column id="type"/>
                                <column id="dateFrom"/>
                                <column id="dateTo"/>
                                <column id="absenceDays"/>
                            </columns>
                            <rowsCount/>
                            <buttonsPanel id="buttonsPanel"
                                          alwaysVisible="true">
                                <button id="addBtn"
                                        icon="font-icon:PLUS"/>
                                <button id="excelBtn"
                                        action="absencesTable.excel"/>
                                <button id="balanceBtn"
                                        caption="msg://balanceBnt"/>
                                <button id="newLeavingVacationRequest"
                                        caption="msg://newLeavingVacationRequestButton"
                                        action="absencesTable.newLeavingVacationRequest"/>
                            </buttonsPanel>
                        </table>
                    </groupBox>
                </scrollBox>
            </tab>
            <tab id="vacationScheduleTab"
                 caption="msg://kz.uco.tsadv.web/Vacations"
                 margin="true">
                <tabSheet id="vacationTabSheet">
                    <tab id="schedulesTab" spacing="true" caption="msg://kz.uco.tsadv.web/Vacations">
                        <vbox id="vBox3"
                              expand="vacationScheduleTable"
                              height="100%"
                              spacing="true">
                            <button id="newVacationScheduleButton"
                                    caption="msg://newVacationScheduleButton"
                                    stylename="primary"
                                    invoke="newVacationScheduleButton"/>
                            <table id="vacationScheduleTable"
                                   sortable="false"
                                   dataContainer="vacationScheduleDc"
                                   width="100%">
                                <columns>
                                    <column id="startDate"/>
                                    <column id="endDate"/>
                                    <column id="absenceDays"/>
                                    <column id="status"/>
                                </columns>
                            </table>
                        </vbox>
                    </tab>
                    <tab id="requestsTab" spacing="true" caption="msg://myRequests">
                        <vbox id="vBox3"
                              expand="vacationScheduleRequestTable"
                              height="100%"
                              spacing="true">
                            <table id="vacationScheduleRequestTable"
                                   sortable="false"
                                   dataContainer="vacationScheduleRequestDc"
                                   width="100%">
                                <columns>
                                    <column id="startDate"/>
                                    <column id="endDate"/>
                                    <column id="absenceDays"/>
                                    <column id="status"/>
                                </columns>
                            </table>
                        </vbox>
                    </tab>
                </tabSheet>
            </tab>

        </tabSheet>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
