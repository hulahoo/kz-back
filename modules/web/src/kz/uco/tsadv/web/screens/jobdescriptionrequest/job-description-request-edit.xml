<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://jobDescriptionRequestEdit.caption"
        focusComponent="form"
        messagesPack="kz.uco.tsadv.web.screens.jobdescriptionrequest">
    <data>
        <instance id="jobDescriptionRequestDc"
                  class="kz.uco.tsadv.modules.hr.JobDescriptionRequest">
            <view extends="_local">
                <property name="positionGroup" view="_minimal">
                    <property name="list" view="_minimal"/>
                    <property name="organizationGroup" view="_minimal"/>
                </property>
                <property name="file" view="_minimal"/>
                <property name="status" view="_minimal">
                    <property name="startDate"/>
                    <property name="endDate"/>
                    <property name="code"/>
                </property>
            </view>
            <loader/>
        </instance>
        <collection id="tasksDc"
                    class="kz.uco.tsadv.entity.bproc.ExtTaskData"/>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="jobDescriptionRequestDc">
                <column id="column1" width="750px">
                    <textField id="requestNumberField" property="requestNumber"/>
                    <dateField id="requestDateField" property="requestDate"/>
                    <pickerField id="statusField" property="status">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="positionGroupField" property="positionGroup">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>

                </column>
            </form>
            <vbox id="fieldsVbox" width="100%" spacing="true">
                <groupBox id="positionDutiesGBox" width="100%">
                    <textArea id="positionDutiesField" property="positionDuties"
                              rows="5" width="100%" dataContainer="jobDescriptionRequestDc"/>
                </groupBox>
                <groupBox id="generalAdditionalRequirementsGBox" width="100%">
                    <textArea id="generalAdditionalRequirementsField" rows="5" width="100%"
                              property="generalAdditionalRequirements" dataContainer="jobDescriptionRequestDc"/>
                </groupBox>
                <groupBox id="compulsoryQualificationRequirementsGBox" width="100%">
                    <textArea id="compulsoryQualificationRequirementsField" rows="5" width="100%"
                              property="compulsoryQualificationRequirements" dataContainer="jobDescriptionRequestDc"/>
                </groupBox>
                <upload id="fileField" fileStoragePutMode="IMMEDIATE" property="file" showFileName="true"
                        dataContainer="jobDescriptionRequestDc"/>
            </vbox>
            <vbox id="bpmActorsVBox"
                  width="1000px"
                  spacing="true">
                <groupBox id="bpmActorsBox"
                          caption="msg://TransferRequest.approvalProcess.actors"
                          spacing="true">
                    <table id="procTasksTable"
                           height="100%"
                           showSelection="false"
                           dataContainer="tasksDc"
                           width="100%">
                        <columns>
                            <column id="hrRole"/>
                            <column id="assignee" generator="generateAssignee"/>
                            <column id="createTime"/>
                            <column id="endTime"/>
                            <column id="outcome" generator="generateOutcome"/>
                            <column id="comment"/>
                        </columns>
                    </table>
                </groupBox>
            </vbox>
        </scrollBox>
        <hbox id="procActionsBox"
              align="BOTTOM_LEFT"
              spacing="true">
            <hbox id="procActionButtonHBox"
                  spacing="true"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
