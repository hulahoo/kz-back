<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="kz.uco.tsadv.web.screens.instructionskpi">
    <data>
        <instance id="instructionsKpiDc"
                  class="kz.uco.tsadv.modules.performance.model.InstructionsKpi"
                  view="instructionsKpi.edit">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="instructionsKpiDc">
            <column width="250px">
                <pickerField id="performancePlanField" property="performancePlan" editable="false">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textArea id="instructionField" property="instruction" rows="5"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
