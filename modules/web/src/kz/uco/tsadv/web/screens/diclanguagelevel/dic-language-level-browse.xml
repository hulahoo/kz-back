<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://dicLanguageLevelBrowse.caption"
        focusComponent="dicLanguageLevelsTable"
        messagesPack="kz.uco.tsadv.web.screens.diclanguagelevel">
    <data readOnly="true">
        <collection id="dicLanguageLevelsDc"
                    class="kz.uco.tsadv.modules.personal.dictionary.DicLanguageLevel">
            <view extends="_local"/>
            <loader id="dicLanguageLevelsDl">
                <query>
                    <![CDATA[select e from tsadv_DicLanguageLevel e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dicLanguageLevelsTable"
            spacing="true">
        <filter id="filter"
                applyTo="dicLanguageLevelsTable"
                dataLoader="dicLanguageLevelsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="dicLanguageLevelsTable"
                    width="100%"
                    dataContainer="dicLanguageLevelsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="langValue1"/>
                <column id="description1"/>
                <column id="langValue2"/>
                <column id="description2"/>
                <column id="langValue3"/>
                <column id="description3"/>
                <column id="langValue4"/>
                <column id="description4"/>
                <column id="langValue5"/>
                <column id="description5"/>
                <column id="startDate"/>
                <column id="endDate"/>
                <column id="code"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="dicLanguageLevelsTable.create"/>
                <button id="editBtn" action="dicLanguageLevelsTable.edit"/>
                <button id="removeBtn" action="dicLanguageLevelsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
