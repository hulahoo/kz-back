<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://organizationIncentiveMonthResultBrowse.caption"
        focusComponent="organizationIncentiveMonthResultsTable"
        messagesPack="kz.uco.tsadv.web.screens.organizationincentivemonthresult">
    <data readOnly="true">
        <collection id="organizationIncentiveMonthResultsDc"
                    class="kz.uco.tsadv.entity.dbview.OrganizationIncentiveMonthResultView"
                    view="organizationIncentiveMonthResultView.browse">
            <loader id="organizationIncentiveMonthResultsDl">
                <query>
                    <![CDATA[select e from tsadv_OrganizationIncentiveMonthResultView e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="organizationIncentiveMonthResultsTable"
            spacing="true">
        <filter id="filter"
                applyTo="organizationIncentiveMonthResultsTable"
                dataLoader="organizationIncentiveMonthResultsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="organizationIncentiveMonthResultsTable"
                    width="100%"
                    dataContainer="organizationIncentiveMonthResultsDc">
            <actions>
                <action id="sendNotification"
                        caption="msg://sendNotification"
                        trackSelection="true"
                        invoke="sendNotification"/>
            </actions>
            <buttonsPanel alwaysVisible="true" margin="true,false,false,false">
                <button id="sendNotificationBtn" action="organizationIncentiveMonthResultsTable.sendNotification"/>
            </buttonsPanel>
            <columns>
                <group>
                    <column id="company"/>
                    <column id="period"/>
                </group>
                <column id="department"/>
                <column id="indicator"/>
                <column id="weight"/>
                <column id="plan"/>
                <column id="fact"/>
                <column id="premiumPercent"/>
                <column id="totalPremiumPercent"/>
                <column id="status"/>
                <column id="comment"/>
            </columns>
            <rowsCount/>
        </groupTable>
    </layout>
</window>
