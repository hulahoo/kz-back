<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="kz.uco.tsadv.web.screens.courseschedule.CourseScheduleEdit"
        datasource="courseScheduleDc"
        focusComponent="fieldGroup"
        messagesPack="kz.uco.tsadv.web.screens.courseschedule">
    <dsContext>
        <datasource id="courseScheduleDc"
                    class="kz.uco.tsadv.modules.learning.model.CourseSchedule"
                    view="courseSchedule.edit">
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions" spacing="true">
        <fieldGroup id="fieldGroup" datasource="courseScheduleDc">
            <column width="250px">
                <field id="courseField" property="course" editable="false"/>
                <field id="nameField" property="name"/>
                <field id="startDateField" property="startDate" required="true"/>
                <field id="endDateField" property="endDate" required="true"/>
                <field id="learningCenterField" property="learningCenter"/>
                <field id="addressField" property="address"/>
                <field id="maxNumberOfPeopleField" property="maxNumberOfPeople"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
