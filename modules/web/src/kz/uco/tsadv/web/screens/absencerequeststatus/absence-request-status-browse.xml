<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://absenceRequestStatusBrowse.caption"
        focusComponent="absenceRequestStatusesTable"
        messagesPack="kz.uco.tsadv.web.screens.absencerequeststatus">
    <data readOnly="true">
        <collection id="absenceRequestStatusesDc"
                    class="kz.uco.tsadv.entity.AbsenceRequestStatus">
            <view extends="_local"/>
            <loader id="absenceRequestStatusesDl">
                <query>
                    <![CDATA[select e from tsadv_AbsenceRequestStatus e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="absenceRequestStatusesTable"
            spacing="true">
        <filter id="filter"
                applyTo="absenceRequestStatusesTable"
                dataLoader="absenceRequestStatusesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="absenceRequestStatusesTable"
                    width="100%"
                    dataContainer="absenceRequestStatusesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="legacyId"/>
                <column id="organizationBin"/>
                <column id="integrationUserLogin"/>
                <column id="langValue1"/>
                <column id="description1"/>
                <column id="langValue2"/>
                <column id="description2"/>
                <column id="langValue3"/>
                <column id="description3"/>
                <column id="langValue4"/>
                <column id="description4"/>
                <column id="langValue5"/>
                <column id="description5"/>
                <column id="startDate"/>
                <column id="endDate"/>
                <column id="code"/>
                <column id="isSystemRecord"/>
                <column id="active"/>
                <column id="isDefault"/>
                <column id="order"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="absenceRequestStatusesTable.create"/>
                <button id="editBtn" action="absenceRequestStatusesTable.edit"/>
                <button id="removeBtn" action="absenceRequestStatusesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
