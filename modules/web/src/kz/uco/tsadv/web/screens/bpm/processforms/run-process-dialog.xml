<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://caption"
        messagesPack="kz.uco.tsadv.web.screens.bpm.processforms">
    <data>
        <collection id="bprocInstanceRolesLinksDc" class="kz.uco.tsadv.modules.bpm.BprocInstanceRolesLink">
            <view extends="_local">
                <property name="hrRole" view="_minimal"/>
                <property name="user" view="_minimal"/>
            </view>
            <loader id="bprocInstanceRolesLinksDl">
                <query>
                    <![CDATA[select e from tsadv_BprocInstanceRolesLink e
                              where e.processInstanceId = :processInstanceId]]>
                </query>
            </loader>
        </collection>
        <collection id="dicHrRolesDc" class="kz.uco.tsadv.modules.personal.dictionary.DicHrRole">
            <view extends="_local"/>
            <loader id="dicHrRolesDl">
                <query>
                    <![CDATA[select e from tsadv$DicHrRole e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600px"
                width="800px"/>
    <layout>
        <table id="bprocInstanceRolesLinksTable"
               height="300px" width="100%"
               dataContainer="bprocInstanceRolesLinksDc"
               editable="true">
            <actions>
                <action id="create" icon="font-icon:PLUS"/>
            </actions>
            <buttonsPanel alwaysVisible="true">
                <button id="bprocInstanceRolesLinksTableCreateBtn" action="bprocInstanceRolesLinksTable.create"/>
            </buttonsPanel>
            <columns>
                <column id="hrRole" generator="hrRolesGenerate" width="300px"/>
                <column id="user" generator="userGenerate" width="300px"
                caption="msg://users"/>
                <column id="deleteRow" generator="deleteGenerate" width="100px"
                        caption="msg://table.btn.remove"/>
            </columns>
        </table>
        <textArea id="comment" caption="comment"/>
        <button id="startProcessBtn" caption="msg://start.process" align="BOTTOM_LEFT"/>
    </layout>
</window>