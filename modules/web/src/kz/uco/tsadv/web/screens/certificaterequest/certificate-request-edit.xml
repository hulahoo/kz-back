<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://certificateRequestEdit.caption"
        focusComponent="form"
        messagesPack="kz.uco.tsadv.web.screens.certificaterequest">
    <data>
        <instance id="certificateRequestDc"
                  class="kz.uco.tsadv.modules.personal.model.CertificateRequest">
            <view extends="_local">
                <property name="personGroup" view="personGroup-view">
                    <property name="currentAssignment" view="_minimal">
                        <property name="positionGroup" view="_minimal"/>
                    </property>
                </property>
                <property name="cretificateType" view="_minimal"/>
                <property name="receivingType" view="_minimal"/>
                <property name="language" view="_minimal"/>
                <property name="file" view="_minimal"/>
                <property name="status" view="_local"/>
            </view>
            <loader/>
        </instance>
        <collection id="statusesDc" class="kz.uco.tsadv.entity.AbsenceRequestStatus" view="_minimal">
            <loader id="statusesDl">
                <query>
                    <![CDATA[select e from tsadv_AbsenceRequestStatus e]]>
                </query>
            </loader>
        </collection>
        <collection id="certTypesDc" class="kz.uco.tsadv.modules.personal.dictionary.DicCertificateType" view="_minimal">
            <loader id="certTypesDl">
                <query>
                    <![CDATA[select e from tsadv_DicCertificateType e]]>
                </query>
            </loader>
        </collection>
        <collection id="receivingTypeDc" class="kz.uco.tsadv.modules.personal.dictionary.DicReceivingType" view="_minimal">
            <loader id="receivingTypeDl">
                <query>
                    <![CDATA[select e from tsadv_DicReceivingType e]]>
                </query>
            </loader>
        </collection>
        <collection id="languageDc" class="kz.uco.tsadv.modules.personal.dictionary.DicLanguage" view="_minimal">
            <loader id="languageDl">
                <query>
                    <![CDATA[select e from tsadv$DicLanguage e]]>
                </query>
            </loader>
        </collection>

    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="certificateRequestDc">
            <column width="350px">
                <textField id="requestNumberField" property="requestNumber" editable="false"/>
                <lookupPickerField id="statusField" optionsContainer="statusesDc" property="status" editable="false"/>
                <lookupPickerField id="receivingTypeField" optionsContainer="receivingTypeDc" property="receivingType"/>
                <dateField id="requestDateField" property="requestDate" editable="false"/>
                <pickerField id="personGroupField" property="personGroup" editable="false"/>
                <pickerField id="positionField" property="personGroup.currentAssignment.positionGroup" editable="false"/>
                <pickerField id="departmentField" property="personGroup.currentAssignment.organizationGroup.organization" caption="mainMsg://department" editable="false"/>
                <lookupPickerField id="cretificateTypeField" optionsContainer="certTypesDc" property="cretificateType"/>
                <lookupPickerField id="languageField" optionsContainer="languageDc" property="language"/>
                <checkBox id="showSalaryField" property="showSalary"/>
                <textField id="numberOfCopyField" property="numberOfCopy"/>
                <upload id="fileField" fileStoragePutMode="IMMEDIATE" property="file" showFileName="true"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
